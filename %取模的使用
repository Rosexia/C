---------------------------------------

#include <stdio.h>
int main()
{
	int a,h,m,s;
	scanf("%d",&a);
	a=(a%86400+86400)%86400;
	h=a/3600;
	a=a%3600;
	m=a/60;
	s=a%60;
	printf("%02d:%02d:%02d",h,m,s);
	return 0;
}
